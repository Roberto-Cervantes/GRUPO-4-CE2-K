@model GRUPO_4_CE2_K.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h1>Eliminar Categoría</h1>

<h3>¿Está seguro de que desea eliminar esta categoría?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Descripción:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Estado:</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Activo" : "Inactivo")</dd>

        <dt class="col-sm-2">Fecha de Registro:</dt>
        <dd class="col-sm-10">@Model.RegisteredAt.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
