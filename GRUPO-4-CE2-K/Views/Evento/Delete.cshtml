@model GRUPO_4_CE2_K.Models.Evento

@{
    ViewData["Title"] = "Eliminar Evento";
}

<h1>Eliminar Evento</h1>

<h3>¿Estás seguro de que deseas eliminar este evento?</h3>
<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Fecha:</dt>
        <dd class="col-sm-10">@Model.EventDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Ubicación:</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
