@model GRUPO_4_CE2_K.Models.Evento

@{
    ViewData["Title"] = "Detalles del Evento";
}

<h1>Detalles del Evento</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Descripción:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Categoría:</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Fecha:</dt>
        <dd class="col-sm-10">@Model.EventDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Ubicación:</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Cupo Máximo:</dt>
        <dd class="col-sm-10">@Model.MaxAttendees</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
