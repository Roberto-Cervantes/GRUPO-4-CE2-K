@model IEnumerable<GRUPO_4_CE2_K.Models.Inscripcion>

@{
    ViewData["Title"] = "Listado de Inscripciones";
}

<h1>Listado de Inscripciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva Inscripción</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Evento</th>
            <th>Usuario</th>
            <th>Fecha de Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Event?.Title</td>
                <td>@item.UserId</td>
                <td>@item.RegisteredAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
