@model GRUPO_4_CE2_K.Models.Inscripcion

@{
    ViewData["Title"] = "Eliminar Inscripción";
}

<h1>Eliminar Inscripción</h1>

<h3>¿Está seguro de que desea eliminar esta inscripción?</h3>
<div>
    <h4>Inscripción</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Evento:</dt>
        <dd class="col-sm-10">@Model.Event?.Title</dd>

        <dt class="col-sm-2">Usuario:</dt>
        <dd class="col-sm-10">@Model.UserId</dd>

        <dt class="col-sm-2">Fecha de Registro:</dt>
        <dd class="col-sm-10">@Model.RegisteredAt.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
