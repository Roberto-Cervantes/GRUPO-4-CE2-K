@model IEnumerable<GRUPO_4_CE2_K.Models.Asistencia>

@{
    ViewData["Title"] = "Listado de Asistencias";
}

<h1>Listado de Asistencias</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nueva Asistencia</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Evento</th>
            <th>User ID</th>
            <th>Presente</th>
            <th>Fecha de Marcado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Event?.Title</td>
                <td>@item.UserId</td>
                <td>@(item.IsPresent ? "Sí" : "No")</td>
                <td>@item.MarkedAt</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
