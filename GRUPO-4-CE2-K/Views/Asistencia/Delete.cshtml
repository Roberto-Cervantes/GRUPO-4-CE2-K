@model GRUPO_4_CE2_K.Models.Asistencia

@{
    ViewData["Title"] = "Eliminar Asistencia";
}

<h1>Eliminar Asistencia</h1>

<h3>¿Está seguro de que desea eliminar esta asistencia?</h3>
<div>
    <h4>Asistencia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Evento:</dt>
        <dd class="col-sm-10">@Model.Event?.Title</dd>

        <dt class="col-sm-2">User ID:</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
